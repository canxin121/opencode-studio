{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCode Studio",
  "version": "0.1.0",
  "identifier": "cn.cxits.opencode-studio",
  "build": {
    "beforeDevCommand": {
      "script": "bun run dev",
      "cwd": "../../web"
    },
    "devUrl": "http://127.0.0.1:3000",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OpenCode Studio",
        "width": 1200,
        "height": 820,
        "resizable": true,
        "url": "http://127.0.0.1:3000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "resources": [
      "../../web/dist"
    ],
    "externalBin": [
      "binaries/opencode-studio"
    ]
  }
}
