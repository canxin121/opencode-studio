{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCode Studio",
  "version": "0.1.0",
  "identifier": "cn.cxits.opencode-studio",
  "build": {
    "beforeDevCommand": "bun run --cwd ../../web dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OpenCode Studio",
        "width": 1200,
        "height": 820,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
